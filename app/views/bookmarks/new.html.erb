<h1>Add a movie bookmark to <%= @list.name %> list </h1>

<%= simple_form_for [@list, @bookmark] do |f| %>
  <%= f.association :movie %>
  <%= f.input :comment %>
  <%= f.input :photo, as: :file %>
  <%= f.button :submit, value: "Save", class: "btn btn-success mb-3" %>
<% end %>

<%= link_to "Back to lists",  lists_path, class: "btn btn-info"%>
